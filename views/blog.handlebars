<div class="row justify-space-between-md">
  <div id="signin" class="blog-card">
    <h2 class="page-title">New Blog Post</h2>
    <form class="form blog-form">
      <div class="form-group">
        <label for="email-login">Title:</label>
        <input class="form-input" type="text" id="blog-title"/>
      </div>
      <div class="form-group">
        <label for="password-login">Description:</label>
        <input class="form-input" type="text" id="blog-description"/>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" id="createBlog" type="submit">Create Post</button>
      </div>
    </form>
  </div>

<script src="/js/post.js"></script>